{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/library": [
        "libs/library/library/src"
      ],
      "@app/library/*": [
        "libs/library/library/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}